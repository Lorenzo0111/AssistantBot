generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Platform {
  SPIGOT
}

model VerificationRequest {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user       String   @unique
  message    String   @unique
  platform   Platform
  platformId String
  plugin     String
}

model SpigotPurchase {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user       String
  plugin     String
  spigotId   String
  verifiedAt DateTime @default(now())

  @@unique([user, plugin])
}
